{
  "name": "@open-captable-protocol/canton",
  "version": "0.2.71",
  "description": "A TypeScript SDK for interacting with the Open CapTable Protocol (OCP) Factory contract on Canton blockchain",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc -p tsconfig.tests.json --noEmit",
    "script:authorize": "ts-node scripts/authorizeIssuer.ts",
    "script:create-issuer": "ts-node scripts/createIssuer.ts",
    "script:get-issuer-ocf": "ts-node scripts/getIssuerAsOcf.ts",
    "docs": "typedoc",
    "docs:clean": "rm -rf docs",
    "test": "npm run -s typecheck && jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:ci": "npm run -s typecheck && jest --runInBand"
  },
  "dependencies": {
    "@daml/ledger": "2.10.2",
    "@daml/types": "2.10.2",
    "@fairmint/canton-node-sdk": "^0.0.98",
    "@fairmint/open-captable-protocol-daml-js": "0.2.12"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.3.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "jest": "30.2.0",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typedoc": "^0.28.0",
    "typescript": "5.9.3"
  },
  "files": [
    "dist"
  ]
}
